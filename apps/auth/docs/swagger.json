                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/models.StatusRes"
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "description": "Cognito SSO login using username and password",
                "consumes": [
                    "application/x-www-form-urlencoded"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Login",
                "parameters": [
                    {
                        "type": "string",
                        "example": "12345",
                        "name": "password",
                        "in": "formData"
                    },
                    {
                        "type": "string",
                        "example": "joel.ow.2022",
                        "name": "username",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "200": {
